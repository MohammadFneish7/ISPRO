@model ISPRO.Persistence.Entities.Subscription

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit Subscription</h1>

<h4>@Model.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <span asp-validation-for="ModelError" class="text-danger"></span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <select asp-for="ProjectName" class="form-control" asp-items="ViewBag.ProjectName"></select>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span>
                    <label asp-for="Bandwidth" style="display: inline-block;" class="control-label"></label> (Mb/s)
                </span>
                <input asp-for="Bandwidth" class="form-control" />
                <span asp-validation-for="Bandwidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span>
                    <label asp-for="Quota" style="display: inline-block;" class="control-label"></label> (GB)
                </span>
                <input asp-for="Quota" class="form-control" />
                <span asp-validation-for="Quota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
